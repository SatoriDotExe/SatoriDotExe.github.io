---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

const pageTitle = "Ethos";

const identity = {
    firstName: "Dirt",
    lastName: "Bag",
    location: "Planet Earth",
    occupation: "GIS Developer and Geospatial Data Engineer",
    hobbies: ["Camping", "Rock Climbing", "Playing sick synthesizers"]
};

const skill = ["PostGIS", "Web Dev", "Minor Pentatonic Scales"];

const accentColor = "orange";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>

        <style define:vars={{accentColor}}>
            h1 {
                color: var(--accentColor);
                font-size: 4rem;
            }

            .skill {
                color: var(--accentColor);
            }
        </style>

	</head>
	<body>
        <Navigation />

		<h1>{pageTitle}</h1>
        <ul>
            <li>My name is {identity.firstName} {identity.lastName}</li>
            <li>I live on {identity.location} and I'm an {identity.occupation}</li>
            {identity.hobbies.length >= 3 &&
                <li>What I like to do: {identity.hobbies[0]}, {identity.hobbies[1]}, and {identity.hobbies[2]}</li>
            }
        </ul>

        <p>My skills are:</p>
        <ul>
        {skill.map((skill) => <li class="skill">{skill}</li>)}
        </ul>

        <Footer />
	</body>
</html>